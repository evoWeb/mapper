{
  "name": "mapper",
  "version": "0.0.1",
  "private": true,

  "dependencies": {
    "js-beautify": "1.6.14",
    "vue-cli": "^2.8.0",

    "vue": "^2.3.3"
  },

  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "node-sass": "^4.5.0",
    "sass-loader": "^5.0.1",
    "vue-loader": "^12.1.0",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },

  "scripts": {
    "start": "node app.js",

    "node-sass": "node-sass --output-style compressed src/scss/Styles.scss public/Stylesheets/Styles.min.css",
    "build:css": "npm run node-sass",

    "node-sass:dev": "node-sass --output-style expanded src/scss/Styles.scss public/Stylesheets/Styles.css",
    "csslint": "csslint --quiet public/Stylesheets/Styles.css",
    "build:dev:css": "npm run node-sass:dev",

    "build:dev": "npm run build:dev:css",
    "build": "npm run build:dev:css && npm run build:css"
  }
}