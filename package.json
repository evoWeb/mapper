{
  "name": "mapper",
  "version": "0.0.1",
  "private": true,

  "dependencies": {

  },

  "devDependencies": {
    "node-sass": "latest",
    "csslint": "latest",
    "jshint": "latest",
    "uglify-js": "latest"
  },

  "scripts": {
    "start": "node app.js",

    "node-sass": "node-sass --output-style compressed private/SCSS/Styles.scss public/Stylesheets/Styles.min.css",
    "build:css": "npm run node-sass",

    "node-sass:dev": "node-sass --output-style expanded private/SCSS/Styles.scss public/Stylesheets/Styles.css",
    "csslint": "csslint --quiet public/Stylesheets/Styles.css",
    "build:dev:css": "npm run node-sass:dev",

    "build:dev": "npm run build:dev:css",
    "build": "npm run build:dev:css && npm run build:css"
  }
}